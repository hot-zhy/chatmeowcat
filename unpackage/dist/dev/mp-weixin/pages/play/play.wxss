.head{
	width: 100%;background: linear-gradient(180deg, #F4EFFF 0%, #FFFFFF 100%);
	height: 300rpx;position: relative;
}
.head_box{
	width: calc(100% - 60rpx);height: 100%;
	position: absolute;padding: 0 30rpx;
	top: 0;left: 0;
	display: flex;align-items: center;justify-content: space-between;
}
.head_box_l{
	display: flex;align-items: center;
}
.head_box_licon{
	width: 120rpx;height: 120rpx;
	border-radius: 50%;overflow: hidden;
	box-shadow: 0px 2rpx 20rpx 0rpx rgba(0,0,0,0.2);
	border: 4rpx solid #FFFFFF;
}
.heaD_box_la_1{
	font-size: 38rpx;
	font-weight: bold;
	color: #333333;
}
.heaD_box_la_2{
	margin-top: 22rpx;
	font-size: 30rpx;
	font-weight: 400;
	color: #666666;
}
.head_box_lb{
	margin-left: 32rpx;
}
.main{
	padding: 24rpx 0;
}
.vip{
	width: 690rpx;height: 98rpx;
	margin: auto;
}
.vip_tit{
	position: absolute;
	top: 50%;transform: translateY(-50%);
	left: 178rpx;z-index: 2;
	font-size: 26rpx;
	font-weight: 500;
	color: #EFEDE9;
}
.main_box{
	padding: 24rpx 30rpx;
	display: flex;align-items: center;justify-content: space-between;
}
.main_l{
	display: flex;align-items: center;
}
.main_lpic{
	width: 56rpx;height: 56rpx;
}
.main_ltit{
	font-size: 32rpx;
	font-weight: bold;
	color: #333333;
	margin-left: 32rpx;
}
.vip_btn{
	font-size: 26rpx;
	font-weight: bold;
	color: #333333;
	width: 160rpx;
	height: 50rpx;
	background: #FFFFFF;
	border-radius: 24rpx;
	display: flex;align-items: center;justify-content: center;
	position: absolute;top: 50%;transform: translateY(-50%);
