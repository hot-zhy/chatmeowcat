.introduction-container {
  margin-top: 10vh;
  display: flex;
  align-items: center;
  background-color: #F4A460;
  border-radius: 30px;
  padding: 5px;
}
.introduction-container .avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
  background-size: cover;
}
.introduction-container .text-content {
  flex-grow: 1;
}
.introduction-container .text-content .title {
  font-size: 16px;
  color: white;
}
.introduction-container .text-content .subtext {
  font-size: 12px;
  color: white;
}
.introduction-container .points {
  background-color: #FFA500;
  border-radius: 10px;
  padding: 2px 5px;
  font-size: 14px;
  color: white;
  margin-left: 10px;
}
