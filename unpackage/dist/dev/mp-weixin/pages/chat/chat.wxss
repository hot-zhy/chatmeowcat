view {
  box-sizing: border-box;
}
page {
  height: 100%;
  width: 100%;
}
.stop-responding {
  display: flex;
  font-size: 14px;
  border-radius: 3px;
  margin-bottom: 15px;
  background-color: #f0b00a;
  color: #FFF;
  width: 90px;
  height: 30px;
  line-height: 30px;
  margin: 0 auto;
  justify-content: center;
  margin-bottom: 15px;
}
.stop-responding:hover {
  box-shadow: 0 0 10px #aaa;
}
.container {
  height: 100%;
  background-color: #FAFAFA;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.foot-box {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  padding: 10px 0px;
  background-color: #FFF;
}
.foot-box-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.textarea-box {
  padding: 8px 10px;
  background-color: #f9f9f9;
  border-radius: 5px;
}
.textarea-box .textarea {
  max-height: 120px;
  font-size: 14px;
  overflow: auto;
  width: 450rpx;
  font-size: 14px;
}
.input-placeholder {
  color: #bbb;
  line-height: 18px;
}
.trash,
.send {
  width: 50px;
  height: 30px;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}
.trash {
  width: 30rpx;
  margin-left: 10rpx;
}
.menu {
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin-left: 20rpx;
}
.menu-item {
  width: 30rpx;
}
.send {
  width: 60px;
  height: 34px;
  border-radius: 30rpx;
  color: #FFF;
  display: flex;
  margin: 0;
  padding: 0;
  font-size: 14px;
  margin-right: 20rpx;
  background-color: #0396FF;
  border: none;
}
.send {
  width: 110rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0;
  padding: 0;
  margin-right: 20rpx;
  color: #FFF;
  background-color: #0396FF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.send::after {
  display: none;
}
.msg-list {
  height: 0;
  flex: 1;
  width: 750rpx;
}
.noData {
  margin-top: 15px;
  text-align: center;
  width: 750rpx;
  color: #aaa;
  font-size: 12px;
  justify-content: center;
}
.tip-ai-ing {
  display: flex;
  align-items: center;
  flex-direction: column;
  font-size: 14px;
  color: #919396;
  padding: 15px 0;
}
.uni-link {
  margin-left: 5px;
  line-height: 20px;
}
.retries-box {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #d2071b;
}
.retries-icon {
  margin-top: 1px;
  margin-left: 5px;
}
.history-content {
  width: 80vw;
  height: 100%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx);
}
.history-content .history-create {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1aad19;
  border: 1px solid #1aad19;
  padding: 15rpx 20rpx;
  margin: 10rpx 20rpx;
  border-radius: 10rpx;
}
.history-content .provider {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 20rpx;
  padding: 20rpx 20rpx;
  border-radius: 10rpx;
  background-color: #f8f8f8;
}
.history-content .provider .provider-item {
  flex: 1;
  text-align: center;
  color: #333333;
  padding: 10rpx 10rpx;
  border-radius: 50rpx;
  margin: 0 15rpx;
  background-color: #ffffff;
}
.history-content .provider .provider-selected {
  border: 1px solid #f0ad4e;
  color: #f0ad4e;
}
.history-content .history-list {
  padding: 0 20rpx;
  height: 0;
  flex: 1;
  overflow-y: auto;
}
.history-content .history-item {
  margin: 20rpx 0;
  color: #333333;
  border: 1px solid #e5e7eb;
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.history-content .history-item .history-title {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  white-space: nowrap;
}
.history-content .history-item .history-icons .icon {
  margin-left: 15rpx;
}
.history-content .history-selected {
  background-color: #0396FF33;
  border: 1px solid #0396FF;
  color: #0396FF;
}
.history-content .history-selected .history-icons text {
  color: #0396FF !important;
}
.zero-chat-box {
  display: flex;
  flex-direction: row-reverse;
  justify-content: center;
  align-items: center;
}
.zero-chat-box .container {
  flex: 1;
  margin: 0;
}
.zero-chat-box .history-pc {
  background-color: #fff;
  box-shadow: 0 0 5px #e0e1e7;
  margin-right: 5px;
  height: calc(100vh - 88px);
  border-radius: 5px;
  overflow: hidden;
}
.zero-chat-box .history-pc .history-content {
  width: 400px;
  padding-bottom: 0;
}